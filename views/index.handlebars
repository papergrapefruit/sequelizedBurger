<div class="container-fluid">
  <div class="row">
    <h1>Eat-Da-Burger!</h1>
    <img src="assets/img/burger.jpg" alt="" class="img-responsive center-block">
  </div>
  <div class="row" id="title-row">
    <div class="col-sm-4 text-center">
      <h2>Burgers that are devoured!</h2>
    </div>
    <div class="col-sm-4 text-center">
      <h2>Add a Burger</h2>
    </div>
    <div class="col-sm-4 text-center">
      <h2>Burgers that are undevoured!</h2>
    </div>
  </div>
  <div class="row" id="body-row">
    <div class="col-sm-4 text-center">
      <ul style="list-style: none;">
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">EATIN' TIME!</button>
          </form>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-sm-4 text-center">
      <form class="create-update-form" action="/"
        method="POST">
        <div class="form-group">
          <label for="bu" id="font-oregano">Burger Name:</label>
          <input type="text" id="bu" name="burger_name">
        </div>
        <div class="form-group">
          <div class="radio text-center" id="font-tenali">
            <label for="dev">Devoured?</label><br>
            <input type="radio" name="devoured" value="1"
              checked=""> Devoured!&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="radio" name="devoured" value="0"> Stayin' Alive!
          </div>
        </div>
        <button type="submit" id="font-addburger">Add Burger</button>
      </form>
    </div>
    <div class="col-sm-4 text-center">
      <ul style="list-style: none;">
        {{#each burgers}} {{#if this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">EAT UP!</button>
          </form>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
</div>